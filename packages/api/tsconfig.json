{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017", "esnext.asynciterable"],
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "pretty": true,
    "esModuleInterop": true,
    "skipLibCheck": true    
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}